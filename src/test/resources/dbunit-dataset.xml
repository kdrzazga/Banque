<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE dataset [
        <!ELEMENT dataset (counterparties | funds | teams)*>
        <!ELEMENT counterparties EMPTY>
        <!ATTLIST counterparties
                id CDATA #REQUIRED
                name CDATA #REQUIRED>
        <!ELEMENT funds EMPTY>
        <!ATTLIST funds
                id CDATA #REQUIRED
                name CDATA #REQUIRED
                shortName CDATA #REQUIRED
                counterparty_id CDATA #IMPLIED
                team_id CDATA #IMPLIED>
        <!ELEMENT teams EMPTY>
        <!ATTLIST teams
                id CDATA #REQUIRED
                name CDATA #REQUIRED>
        ]>

<dataset>

    <counterparties id="1" name="Spacetek"/>
    <counterparties id="2" name="No Employees counterparty"/>

    <teams id="1" name="Super team"/>

    <funds id="1" name="Bob" shortName="Smith" counterparty_id="1" team_id="1"/>
    <funds id="2" name="" shortName=""/>
    <funds id="3" name="Jane" shortName="Doe" counterparty_id="1"/>

</dataset>
